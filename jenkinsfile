pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                script {
                    dir('terraform') {
                        git branch: 'main', url: 'https://github.com/UparagNath/devops.git'
                    }
                }
            }
        }
        stage('Plan') {
            steps {
                echo 'Plan stage'
            }
        }
        stage('Approval') {
            steps {
                echo 'Approval stage'
            }
        }
        stage('Apply') {
            steps {
                echo 'Apply stage'
            }
        }
    }
}
